{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "UTAU Sequence Text",
	"patterns": [
		{ "include": "#sections" },
		{ "include": "#flags" },
		{ "include": "source.ini" }
	],
	"repository": {
		"sections": {
			"patterns": [
				{
					"name": "entity.name.section.ust",
					"match": "^\\[#(VERSION|SETTING|PREV|NEXT|TRACKEND|\\d{4})\\]"
				}
			]
		},
		"flags": {
  			"patterns": [
    			{
     				"begin": "(Flags)(=)",
      				"beginCaptures": {
        				"1": { "name": "keyword.other.flags.ust" }
      				},
      				"end": "$",
      				"patterns": [
        				{
          					"name": "keyword.operator.flag.ust",
          					"match": "[A-Za-z]+"
        				},
        				{
          					"name": "constant.numeric.flag.ust",
          					"match": "[-+]?\\d+"
        				}
      				]
    			}
  			]
		}
	},
	"scopeName": "source.ust"
}